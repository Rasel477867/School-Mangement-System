@model IEnumerable<SchoolMS.Web.ViewModels.SubjectAttendenceView>



@{
    var firstSubject = Model.FirstOrDefault();
}






@if (firstSubject != null)
{
    <div>
        <h3 class="text-center"> Subject Name: @firstSubject.SubjectName</h3>
       
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Serial)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Attendence)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Serial)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </td>
                    <td>
                       

                        @if (item.Attendence)
                        {
                            <p class="text-info"> Present</p>
                        }
                        else
                        {
                            <p class="text-danger">Absent</p>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>



  
}
else
{

    <br />
    <br />
    <h3 class="text-center ">NO Subject Assigned this class</h3>
}