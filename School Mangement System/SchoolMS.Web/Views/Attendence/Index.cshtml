
@{
    ViewData["Title"] = "Index";
}
@if (TempData["ASuccess"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr["success"]('@TempData["ASuccess"]');

    </script>

}

<h1>Selecet You</h1>
<div class="row"> 
    <div class="col-6 ">
        <button class="btn btn-dark " >
            <a class="text-decoration-none text-light fw-bold" asp-action="Create" asp-controller="Attendence">
                Teacher
            </a>
        </button>
    </div> 
    <div class="col-6 ">
       
        

            <div>
                <button id="sbtn" class="btn btn-secondary">Student</button>

                <br />
                <div id="Result">
                </div>


            </div>
           
            
       
    </div>   
   
  
</div>

@section Scripts {

    <script>
        $("#sbtn").click(function () {
            var btn= `

                     <a class="text-decoration-none text-light fw-bold text-center" href="Attendence/CreateStudentAttendence">
                             Full Course Attendance Summary
                    </a>
                    <br />
                    <br />

                      <a class="text-decoration-none text-light fw-bold text-center" href="Attendence/CreateStudentAttendence">
                           Course Attendance Record
                     </a>

                        `;
            $("#Result").append(btn);
            $("#sbtn").remove();
           
        });





    </script>
}
